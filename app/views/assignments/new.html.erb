<div class="container">
  <%= form_for @user, url: assignments_path ,method: :post do |f| %>
    <div class="Assignments">
      <%= f.fields_for :assignments do |ff|%>
        <%= render 'assignment_fields', f: ff%>
      <%end%>
      
      <div class="links">
        <%= link_to_add_association 'add task', f, :assignments %>
      </div>
    </div>
    <%= f.button :submit, class:'btn btn-primary'%>
  <% end %>
</div>